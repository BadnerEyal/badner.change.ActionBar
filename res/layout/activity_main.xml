<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<TextView
    android:id="@+id/textview2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:text="Select what you want to change the bar"
    android:textColor="#FBFBFB"
    android:textSize="28dp"
    android:textStyle="bold" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp" >
    
    <Button
        android:id="@+id/buttonColorBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Bar" />
    <Button
        android:id="@+id/buttonFontColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_marginLeft="28dp"
        
        android:text="Font Color" />
    
    
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp" >
    
     <Button
        android:id="@+id/buttonFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 
        android:text="Font Bar" />

     <Button
         android:id="@+id/buttonReplaceIcon"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:text="Replace icon" />
     
</LinearLayout>
    
</LinearLayout>
